<body>
  <!-- Header Section -->
    <%- include("./navbar") -%>

    <!-- flash message -->
    <%- include("./messages") -%>
      
    <!-- main section -->
      <div class="d-flex" style="background-color: #F0F2F5; height: 80vh;">
          <div class="mt-5" style="width: 50%;">
                <div class="card mx-auto mt-5 shadow p-3 mb-5 bg-body rounded" style="width: 80%; height: 80%;">
                <form method="post" action="/user/login" class="mx-auto mt=5" style="width:80%;">
                <div class="mb-4">  
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control rounded-pill p-2" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-4">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" name="password" class="form-control rounded-pill p-2" id="exampleInputPassword1">
                </div>
                <div class="d-grid">
                 <button type="submit" class="btn btn-primary btn-lg">
                   Log In
                 </button>
          
                </div>
                </form>
                <p class="text-center my-3 text-primary">Dont have an account?
                    <span><a href="/register">Sign up</a></span>
                </p>
                </div>
            
            </div>
            <div class="" style="width:50%;">
                <div class="fs-3 fw-bold mt-3">
                    <p> #1 Bloggin website for <br> everyone around the globe.totally free and easy to use
                    </p>
            </div>
            <div style="padding-left: 29%;">
                <img src="./assets/images/computer-login-edited.svg" alt="sign up gif" width="60%" class="box-sitting hard">
            </div>
            <div class="" style="width: 50%;">
                
            </div>
      <!-- footer section -->
      <%- include("./footer") -%>

